{
  "env": {
    "browser": true,
    "es2021": true,
    "react-native/react-native": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "@react-native-community",
    "expo"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": "off",
    "react/react-in-jsx-scope": "off",
    "react-native/no-unused-styles": "warn",
    "react-native/split-platform-components": "warn",
    "react-native/no-inline-styles": "warn",
    "react-native/no-color-literals": "warn",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "@typescript-eslint/no-unused-vars": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".expo/",
    "dist/",
    "build/"
  ]
}
